{% extends "AcmeDemoBundle::layout.html.twig" %}

{% form_theme form 'AcmeDemoBundle:Form:theme.html.twig' %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'Book'}, 'admin') }}{% endblock %}

{% block body %}
    <h1>{{ '%entity% creation'|trans({'%entity%': 'Book'}, 'admin') }}</h1>

    <form action="{{ path('books_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <button class="btn btn-primary" type="submit">{{ 'Create'|trans({}, 'admin') }}</button>
        </p>
    </form>

        
        <div class="btn-group record_actions">

            <a class="btn btn-info" href="{{ path('books') }}">
                <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
            </a>


        </div>


{% endblock %}